<head>
  <link rel="stylesheet" href="style.css">
</head>

<form method = 'post' action = '/summary'>
<h1>Your pizza:</h1>
<% counter = 0 %>
<% pizzalist.each do |item| %>
<% if item == "small" || item == "medium" || item == "large" || item == "thin" || item == "regular" || item == "stuffed" %>
<b><%= item %></b><input type = hidden name = "<%= item + counter.to_s %>" value = "yes">
<br>
<% else %>
<p><%= item  %>
<input type = "radio" name = "<%= item + counter.to_s %>" value = "yes" checked>Keep
<input type = "radio" name = "<%= item + counter.to_s %>" value = "no">Discard
<br>
</p>
<% end %>
<% counter += 1 %>
<% end %>
<h1>Delivery or Pickup?</h1>
	<label><input type = 'radio' name = 'delivery' value = 'delivery'>Delivery</label><br>
	<label><input type = 'radio' name = 'delivery' value = 'Pickup'Checked>Pickup</label><br>
<input type = "submit" value = "submit">
</form>
