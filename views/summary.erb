<head>
  <link rel="stylesheet" href="style.css">
</head>

<form method = 'post' action = '/summary'>
<h1>Your pizza:</h1>
<% counter = 0 %>
<% pizzalist.each do |item| %>
<% if item == "small" || item == "medium" || item == "small" %>
<br>
<% end %>
<% if item == "small" || item == "medium" || item == "large" || item == "thin" || item == "regular" || item == "stuffed" %>
<label><img src = "/images/<%=item%>.jpg"><b><%= item %></b><input type = hidden name = "<%= item + counter.to_s %>" value = "yes"></label>
<% else %>
<label>
  <img src = "/images/<%=item%>.jpg"><b><%= item  %></b>
<input type = "radio" name = "<%= item + counter.to_s %>" value = "yes" checked><b>Keep</b>
<input type = "radio" name = "<%= item + counter.to_s %>" value = "no"><b>Discard</b></label>
<% end %>
<% counter += 1 %>
<% end %>
<h1>Delivery or Pickup?</h1>
	<input type = 'radio' name = 'delivery' value = 'delivery'><b>Delivery<br></b>
	<input type = 'radio' name = 'delivery' value = 'Pickup'Checked><b>Pickup<br></b>
<input type = "submit" value = "submit">

</form>
